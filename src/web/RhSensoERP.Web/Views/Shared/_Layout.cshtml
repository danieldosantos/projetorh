@{
    var title = ViewData["Title"] as string ?? "RhSensoERP";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - RhSensoERP</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex">
    <nav id="sidebar" class="bg-dark text-white flex-shrink-0 p-3" style="width: 260px;">
        <div class="d-flex align-items-center mb-3">
            <i class="fa-solid fa-people-group fa-2x me-2"></i>
            <span class="fs-4 fw-semibold">RhSensoERP</span>
        </div>
        <hr class="border-secondary" />
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-chart-line me-2"></i>Dashboard
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-area="SEG" asp-controller="Usuarios" asp-action="Index">
                    <i class="fa-solid fa-user-shield me-2"></i>Usuários
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-area="SEG" asp-controller="Grupos" asp-action="Index">
                    <i class="fa-solid fa-layer-group me-2"></i>Grupos
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-area="RHU" asp-controller="Funcionarios" asp-action="Index">
                    <i class="fa-solid fa-id-card me-2"></i>Funcionários
                </a>
            </li>
        </ul>
    </nav>
    <div class="flex-grow-1 d-flex flex-column min-vh-100">
        <header class="border-bottom bg-white shadow-sm">
            <div class="container-fluid py-3 d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                    <small class="text-muted">@ViewData["Breadcrumb"]</small>
                </div>
                <form class="d-flex align-items-center" asp-controller="Auth" asp-action="Logout" method="post">
                    <div class="text-end me-3">
                        <div class="fw-semibold">@User.Identity?.Name</div>
                        <small class="text-muted">Usuário autenticado</small>
                    </div>
                    <button class="btn btn-outline-danger" type="submit">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </button>
                </form>
            </div>
        </header>
        <main class="flex-grow-1">
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </main>
        <footer class="border-top bg-white py-3 text-center text-muted small">
            © @DateTime.Now.Year RhSensoERP - Construído com ASP.NET Core MVC + Inspinia
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js"></script>
    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
