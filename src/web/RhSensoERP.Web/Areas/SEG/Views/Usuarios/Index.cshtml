@model IEnumerable<RhSensoERP.Web.Services.Contracts.UsuarioDto>
@{
    ViewData["Title"] = "Gestão de Usuários";
    ViewData["Breadcrumb"] = "SEG / Usuários";
}
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h2 class="h5 mb-0">Usuários</h2>
                <small class="text-muted">Controle completo dos acessos do sistema</small>
            </div>
            <button class="btn btn-success" id="btnNovoUsuario">
                <i class="fa-solid fa-plus me-2"></i>Novo Usuário
            </button>
        </div>
        <table class="table table-striped" id="usuariosTable">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Status</th>
                    <th>Permissões</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Email</td>
                        <td>
                            <span class="badge @(usuario.Ativo ? "bg-success" : "bg-secondary")">
                                @(usuario.Ativo ? "Ativo" : "Inativo")
                            </span>
                        </td>
                        <td>
                            <span class="text-muted small">@string.Join(", ", usuario.Permissoes)</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalUsuario" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Novo Usuário</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formUsuario">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Nome</label>
                            <input type="text" name="Nome" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">E-mail</label>
                            <input type="email" name="Email" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Status</label>
                            <select class="form-select" name="Ativo">
                                <option value="true">Ativo</option>
                                <option value="false">Inativo</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Permissões (separe por vírgula)</label>
                            <input type="text" name="Permissoes" class="form-control" placeholder="SEG.USUARIOS.CONSULTAR, SEG.USUARIOS.EDITAR" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="btnSalvarUsuario">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/modules/usuarios.js"></script>
}
